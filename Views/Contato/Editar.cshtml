@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Editar novo Contato";
}

<h1>Editar novo contato</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                
                @if (@Model.Ativo == 1) { 
                    <input name="Ativo" value="1" type="checkbox" class="form-check-input" checked  />
                } else {
                    <input name="Ativo" value="1" type="checkbox" class="form-check-input"   />
                }
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>